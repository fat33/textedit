<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.example.textedit">
    <signal name="message">
      <arg name="pid" type="i" direction="out"/>
      <arg name="cursor" type="i" direction="out"/>
      <arg name="text" type="s" direction="out"/>
    </signal>
    <signal name="action">
      <arg name="pid" type="i" direction="out"/>
    </signal>
    <signal name="modified">
      <arg name="pid" type="i" direction="out"/>
      <arg name="file" type="s" direction="out"/>
      <arg name="flag" type="b" direction="out"/>
    </signal>
  </interface>
</node>
